<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">


    <ImageView
        android:id="@+id/image_view_auth_activity_selfie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_auth_activity_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_auth_activity_selfie" />

    <TextView
        android:id="@+id/text_view_auth_activity_surname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_auth_activity_name" />

    <Button
        android:id="@+id/button_auth_activity_edit_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Изменить данные"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_auth_activity_surname"/>

</androidx.constraintlayout.widget.ConstraintLayout>